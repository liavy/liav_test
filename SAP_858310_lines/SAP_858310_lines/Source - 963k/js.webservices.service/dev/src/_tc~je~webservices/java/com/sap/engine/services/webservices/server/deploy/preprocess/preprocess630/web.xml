<?xml version="1.0" encoding="UTF-8" ?>
  <web-app>
    <display-name>
      SoapServlet.war
    </display-name>

    <servlet>
      <servlet-name>SoapServlet</servlet-name>
      <display-name>SoapServlet</display-name>
      <servlet-class>com.sap.engine.services.webservices.runtime.servlet.SoapServlet</servlet-class>
      <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>
        SoapServlet
      </servlet-name>
      <url-pattern>
        /*
      </url-pattern>
    </servlet-mapping>

    <session-config>
       <session-timeout>1</session-timeout>
    </session-config>

  </web-app>